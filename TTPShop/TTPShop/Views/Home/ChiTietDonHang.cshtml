@model TTPShop.Models.TaiKhoan

<div class="checkout__order">
    @using (Html.BeginForm("DonHang", "Home"))
    {
        <h4>Chi tiết đơn hàng</h4>
        <hr />
        <div class="col-lg-12 col-md-12 col-sm-12">
            <p>Họ tên: <b>@Model.HoTen</b></p>
            <p></p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <p>Số điện thoại: <b>@Model.SoDienThoai</b></p>
            <p></p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <p>Email: <b>@Model.DiaChiEmail</b></p>
            <p></p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <p>Địa chỉ giao hàng</p>
            <input type="text" name="DiaChi" required>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <p>Hình thức thanh toán</p>
            <select name="HinhThucTT">
                <option value="0" selected="selected">Thanh toán khi nhận hàng</option>
                @*<option value="1">Thanh toán bằng ví Momo</option>*@
            </select>
        </div>
        <br />
        <div class="col-lg-12 col-md-12 col-sm-12" style="text-align:center">
            <input type="submit" value="Đặt Hàng" class="btn btn-success" />
        </div>
    }
</div>