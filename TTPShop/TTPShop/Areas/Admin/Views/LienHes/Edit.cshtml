@model TTPShop.Models.LienHe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa thông tin</h2>

<div class="wrapper bg-white mt-sm-5">
    <div class="py-1 row-details">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row py-1">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaLH)
                <div class="form-group contact-admin-view">
                    <label>Địa chỉ</label>
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>
                    
            <div class="row py-1">
                <div class="form-group contact-admin-view">
                    <label>Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row py-1">
                <div class="form-group contact-admin-view">
                    <label>Số điện thoại</label>
                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row py-1">
                <div class="form-group contact-admin-view">
                    <label>Thời gian làm việc</label>
                    @Html.EditorFor(model => model.ThoiGianLamViec, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThoiGianLamViec, "", new { @class = "text-danger" })
                </div>
            </div>

            if (ViewBag.Error != null)
            {
                <div class="row py-1 alert alert-danger text-center">
                    <p class="text-center title-error">@ViewBag.Error</p>
                </div>
            }

            <div class="py-3 pb-4 border-bottom">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                        <a class="btn border button" href="/Admin/LienHes">Trở lại</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>