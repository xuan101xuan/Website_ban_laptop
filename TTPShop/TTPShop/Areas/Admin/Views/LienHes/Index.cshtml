@model IEnumerable<TTPShop.Models.LienHe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="home-section">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-8"><h2><b>Liên hệ</b></h2></div>
                    <div class="col-sm-4">
                        <a href="@Url.Action("Create")" class="btn btn-info add-new"><i class="fa fa-plus"></i> Thêm </a>
                    </div>
                </div>
            </div>
            <table class="table table-bordered lienhe-col" id="table-user">
                <thead>
                    <tr>
                        <th class="text-center">
                            <span>Địa chỉ</span>
                        </th>
                        <th class="text-center">
                            <span>Email</span>
                        </th>
                        <th class="text-center">
                            <span>Điện thoại</span>
                        </th>
                        <th class="text-center">
                            <span>Thời gian làm việc</span>
                        </th>
                        <th class="text-center">
                            <span>Thiết lập</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DienThoai)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.ThoiGianLamViec)
                            </td>
                            <td class="text-center align-middle ">
                                <a href="@Url.Action("Details", new { id = item.MaLH })" class="edit btn btn-edit" title="Chi tiết" data-toggle="tooltip"><i class="bx bx-detail"></i></a>
                                <a href="@Url.Action("Edit", new { id = item.MaLH })" class="edit btn btn-edit" title="Sửa" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>

                                <a href="@Url.Action("Delete", new { id = item.MaLH })" data-toggle="tooltip" class="delete btn btn-link btn-delete" title="Xóa"><i class="material-icons">&#xE872;</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
