@model TTPShop.Models.TaiKhoan

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm thành viên</h2>

<div class="wrapper bg-white mt-sm-5">
    <div class="py-1 row-details">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row py-2">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Địa chỉ email</label>
                        @Html.EditorFor(model => model.DiaChiEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChiEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Họ và tên</label>
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="GioiTinh">Giới tính</label>
                        <select name="GioiTinh" id="GioiTinh">
                            @if (Model != null)
                            {
                                if (Model.GioiTinh == "Name")
                                {
                                    <option value="Nam" selected>Nam</option>
                                    <option value="Nữ">Nữ</option>
                                }
                                else
                                {
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ"  selected>Nữ</option>
                                }
                            }
                            else
                            {
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="VaiTro">Vai trò</label>
                        <select name="VaiTro" id="VaiTro">
                            @if (Model != null)
                            {
                                if (Model.VaiTro == "User")
                                {
                                    <option value="Administrator">Administrator</option>
                                    <option value="User"  selected>User</option>
                                }
                                else
                                {
                                    <option value="Administrator" selected>Administrator</option>
                                    <option value="User">User</option>
                                }

                            }
                            else
                            {
                                <option value="Administrator">Administrator</option>
                                <option value="User">User</option>
                            }

                        </select>
                    </div>
                </div>
            </div>

            <div class="row py-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <span class="control-label col-md-2">Ngày sinh</span> <br />
                        @Html.TextBoxFor(m => m.NgaySinh, "{0:yyyy-MM-dd}", new { type = "date" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="TrangThai">Trạng thái</label>
                        <select name="TrangThai" id="TrangThai">
                            @if (Model != null)
                            {
                                if (Model.TrangThai == 1)
                                {
                                    <option value=1 selected>Active</option>
                                    <option value=0>Block</option>
                                }
                                else
                                {
                                    <option value=1>Active</option>
                                    <option value=0 selected>Block</option>
                                }
                            }
                            else
                            {
                                <option value=1>Active</option>
                                <option value=0>Block</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            if (ViewBag.Error != null)
            {
                <div class="row py-1 alert alert-danger text-center">
                    <p class="text-center title-error">@ViewBag.Error</p>
                </div>
            }

            <div class="py-3 pb-4 border-bottom">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Tạo" class="btn btn-primary" />
                        <a class="btn border button" href="/Admin/Taikhoans">Trở lại</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    var d = new Date();
    d = new Date(d.getTime() - d.getTimezoneOffset() * 60000)
    var elem = document.getElementById("NgaySinh");
    if (elem.value.length == 0) {
        elem.value = d.toISOString().slice(0, 10);
    }
</script>